<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wishlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdateProductActivity"></activity>
        <activity android:name=".ViewFriendWishlistActivity"></activity>
        <activity android:name=".UpdateGroupActivity" />
        <activity android:name=".WishlistAddProductActivity" />
        <activity android:name=".UpdateFriendship"></activity>
        <activity android:name=".ViewWishlistProductActivity" />
        <activity android:name=".FriendProfileActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wishlist.FriendlistActivity" />
        </activity>
        <activity android:name=".CreateFriendshipActivity" />
        <activity android:name=".CreateGroupActivity" />
        <activity android:name=".UpdateProfileActivity" />
        <activity android:name=".UpdateWishlistActivity" />
        <activity android:name=".ViewProductActivity" />
        <activity android:name=".CreateProductActivity" />
        <activity
            android:name=".CreateWishlistActivity"
            android:parentActivityName=".WishlistsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wishlist.WishlistsActivity" />
        </activity>
        <activity
            android:name=".Welcome_Screen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wishlist.HomeActivity" />
        </activity>
        <activity
            android:name=".WishlistsActivity"
            android:parentActivityName=".HomeActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wishlist.HomeActivity" />
        </activity>
        <activity
            android:name=".FriendlistActivity"
            android:parentActivityName=".HomeActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wishlist.HomeActivity" />
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".HomeActivity" />
    </application>

</manifest>